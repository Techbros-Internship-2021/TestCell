<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/time"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/boxallbg"
    tools:context=".TestAct">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/centerGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pingLatText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ping"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/pingLatText2"
        app:layout_constraintStart_toStartOf="@+id/pingLatText2"
        app:layout_constraintTop_toBottomOf="@+id/pingLatText2" />

    <TextView
        android:id="@+id/pingLatText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ping"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/centerGroup2"
        app:layout_constraintVertical_bias="0.069" />

    <TextView
        android:id="@+id/downText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/downText3"
        app:layout_constraintStart_toStartOf="@+id/downText3"
        app:layout_constraintTop_toBottomOf="@+id/downText3" />

    <TextView
        android:id="@+id/downText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pingLatText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pingLatText"
        app:layout_constraintVertical_bias="0.15" />

    <TextView
        android:id="@+id/upText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/upText2"
        app:layout_constraintStart_toStartOf="@+id/upText2"
        app:layout_constraintTop_toBottomOf="@+id/upText2" />

    <TextView
        android:id="@+id/upText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pingLatText"
        app:layout_constraintTop_toBottomOf="@+id/pingLatText"
        app:layout_constraintVertical_bias="0.15" />

    <ImageView
        android:id="@+id/speed3"
        android:layout_width="170dp"
        android:layout_height="170dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pingLatText"
        app:srcCompat="@drawable/play_button" />

</androidx.constraintlayout.widget.ConstraintLayout>